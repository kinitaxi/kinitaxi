<resources>

  <style name="AcxiTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#293795</item>
    <item name="colorAccent">#F96332</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="AcxiTheme1" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#293795</item>
    <item name="colorAccent">#F96332</item>
    <item name="android:textViewStyle">@style/MyTextViewStyle</item>
  </style>

  <style name="AcxiTheme2" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#0690C1</item>
    <item name="colorPrimaryDark">#06749B</item>
    <item name="colorAccent">#95989A</item>
  </style>

  <style name="AcxiTheme.ActionBar.Transparent" parent="AcxiTheme">
    <item name="colorPrimary">@android:color/transparent</item>
  </style>
  <style name="AcxiTheme2.ActionBar.Transparent" parent="AcxiTheme">
    <item name="colorPrimary">@android:color/transparent</item>
  </style>

  <style name="checkbox_theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#F96332</item>
    <item name="colorPrimaryDark">#F96332</item>
    <item name="colorAccent">#F96332</item>
  </style>


  <style name="AcxiText" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#0690C1</item>
    <item name="colorPrimaryDark">#06749B</item>
    <item name="colorAccent">#808080</item>
    <item name="android:windowTranslucentStatus">true</item>

  </style>

  <style name="AcxiText1" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#0690C1</item>
    <item name="colorPrimaryDark">#06749B</item>
    <item name="colorAccent">#EE861F</item>

  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="MyTextViewStyle" parent="android:Widget.TextView">
    <item name="android:textColor">#000</item>
  </style>

  <style name="NavigationDrawerStyle">
    <item name="android:textSize">15sp</item>
    <!-- text size in menu-->
    <item name="android:listPreferredItemHeightSmall">50dp</item>
    <item name="colorPrimary">#F96332</item>
    <item name="colorPrimaryDark">#F96332</item>
    <item name="colorAccent">#F96332</item>
    <!-- item size in menu-->
  </style>

</resources>


